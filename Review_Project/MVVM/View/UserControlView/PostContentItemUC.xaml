<UserControl x:Class="Review_Project.MVVM.View.UserControlView.PostContentItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Review_Project.MVVM.View.UserControlView"
             mc:Ignorable="d" 
             Name="postContentUC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,20,0,20">
            <TextBlock  Text="{Binding Path=Title,ElementName=postContentUC}"
                        Margin="5,0,0,0" TextWrapping="Wrap"
                        FontSize="20" Foreground="White" FontWeight="SemiBold"
                        HorizontalAlignment="Center" VerticalAlignment="Center"> 
                        Tiêu đề của nội dung
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel x:Name="contentContainer">
                
            </StackPanel>
        </Grid>
        
    </Grid>
</UserControl>
