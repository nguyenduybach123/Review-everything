<UserControl x:Class="Review_Project.MVVM.View.UserControlView.ImageItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Review_Project.MVVM.View.UserControlView"
             mc:Ignorable="d"  Name="imgItemUC">
    <Border CornerRadius="20" Background="White" Width="150" Height="150">
        <Image Source="{Binding Path=Image,ElementName=imgItemUC}" Stretch="Fill"
               ></Image>
    </Border>
</UserControl>
